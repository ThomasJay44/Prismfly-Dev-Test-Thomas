  <h3>Customize Collections</h3>
  <label>
    <input type="checkbox" name="show_collection_1" checked>
    Show Collection 1
  </label>
  <label>
    <input type="checkbox" name="show_collection_2" checked>
    Show Collection 2
  </label>
  <label>
    <input type="checkbox" name="show_collection_3" checked>
    Show Collection 3
  </label>
  <!-- Add more checkboxes for other collections if needed -->
</div>
{% endcontent_for_index %}
