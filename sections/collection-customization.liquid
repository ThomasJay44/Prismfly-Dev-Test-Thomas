{% schema %}
{
  "name": "Collection Customization",
  "settings": [
    {
      "type": "checkbox",
      "label": "Show Collection 1",
      "id": "show_collection_1",
      "default": true
    },
    {
      "type": "checkbox",
      "label": "Show Collection 2",
      "id": "show_collection_2",
      "default": true
    },
    {
      "type": "checkbox",
      "label": "Show Collection 3",
      "id": "show_collection_3",
      "default": true
    }
    // Add more checkboxes for other collections if needed
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
